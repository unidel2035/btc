# Режим работы
NODE_ENV=development

# Биржи - Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here
BINANCE_TESTNET=true

# Биржи - Bybit
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_SECRET=your_bybit_secret_here
BYBIT_TESTNET=true

# Биржи - OKX
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET=your_okx_secret_here
OKX_PASSPHRASE=your_okx_passphrase_here
OKX_TESTNET=true

# База данных - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=btc_trading_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_URL=postgresql://postgres:your_postgres_password@localhost:5432/btc_trading_bot

# Кеш - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# Twitter/X API
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here

# Новостные API
NEWS_API_KEY=your_news_api_key_here
COINDESK_API_KEY=
COINTELEGRAPH_API_KEY=

# Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=btc-trading-bot

# Telegram уведомления
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Social Media Collectors
SOCIAL_COLLECTOR_ENABLED=false

# Twitter Collector
TWITTER_ACCOUNTS=elonmusk,whale_alert,DocumentingBTC
TWITTER_HASHTAGS=Bitcoin,BTC,Crypto
TWITTER_MAX_RESULTS=10
TWITTER_POLLING_INTERVAL=60000

# Reddit Collector
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
REDDIT_SUBREDDITS=Bitcoin,CryptoCurrency,CryptoMarkets
REDDIT_LIMIT=25
REDDIT_POLLING_INTERVAL=120000

# Telegram Collector
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash
TELEGRAM_CHANNELS=@bitcoin,@cryptonews
TELEGRAM_POLLING_INTERVAL=30000

# Настройки торговли
TRADING_ENABLED=false
PAPER_TRADING=true
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENT=2
TAKE_PROFIT_PERCENT=5
DAILY_LOSS_LIMIT=5
RISK_PER_TRADE=1

# API сервер
API_PORT=3000
API_HOST=localhost

# Dashboard
DASHBOARD_PORT=8080
DASHBOARD_HOST=localhost

# Логирование
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Метрики и мониторинг
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
