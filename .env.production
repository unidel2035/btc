# Production Environment Configuration

# Node Environment
NODE_ENV=production
TRADING_MODE=live

# API Configuration
API_PORT=3000
DASHBOARD_PORT=8080

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=btc_trading_bot_production
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD

# Sentiment Analyzer
SENTIMENT_API_URL=http://sentiment-analyzer:8000
SENTIMENT_API_PORT=8000

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=CHANGE_ME_SECURE_GRAFANA_PASSWORD
GRAFANA_USER=admin
GRAFANA_ROOT_URL=https://grafana.example.com
ALERTMANAGER_PORT=9093

# Logging
LOG_LEVEL=info

# Trading (Live mode - REAL MONEY!)
TRADING_ENABLED=true
PAPER_TRADING=false

# News Collection
ENABLE_NEWS_SCHEDULER=true

# Exchange APIs (PRODUCTION KEYS - KEEP SECRET!)
BINANCE_API_KEY=YOUR_PRODUCTION_BINANCE_API_KEY
BINANCE_SECRET=YOUR_PRODUCTION_BINANCE_SECRET
BYBIT_API_KEY=YOUR_PRODUCTION_BYBIT_API_KEY
BYBIT_SECRET=YOUR_PRODUCTION_BYBIT_SECRET

# Notifications
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID

# Optional: Other exchanges
# OKX_API_KEY=
# OKX_SECRET=
# OKX_PASSPHRASE=
