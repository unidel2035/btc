# Production Environment Configuration

# Environment
NODE_ENV=production
TRADING_MODE=live

# Server
API_PORT=3000
DASHBOARD_PORT=8080

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=btc_trading_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_production_db_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_production_redis_password

# Trading
TRADING_ENABLED=true

# Exchange API (Production)
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_api_secret

# Risk Management
MAX_POSITION_SIZE=10
MAX_POSITIONS=3
MAX_DAILY_LOSS=5
MAX_TOTAL_DRAWDOWN=15
DEFAULT_STOP_LOSS=2
DEFAULT_TAKE_PROFIT=5

# Logging
LOG_LEVEL=info

# Monitoring
GRAFANA_PASSWORD=your_grafana_password

# Sentiment Analyzer
SENTIMENT_API_URL=http://sentiment-analyzer:8000
SENTIMENT_API_PORT=8000

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/PRODUCTION/WEBHOOK

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=production

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
