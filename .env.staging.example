# Staging Environment Configuration

# Environment
NODE_ENV=staging
TRADING_MODE=paper

# Server
API_PORT=3000
DASHBOARD_PORT=8080

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=btc_trading_bot_staging
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_staging_db_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_staging_redis_password

# Paper Trading
PAPER_INITIAL_BALANCE=50000
PAPER_CURRENCY=USDT
PAPER_MAKER_FEE=0.1
PAPER_TAKER_FEE=0.1
PAPER_SLIPPAGE=0.05
PAPER_ALLOW_SHORTS=true
PAPER_MAX_POSITIONS=5

# Logging
LOG_LEVEL=debug

# Monitoring
GRAFANA_PASSWORD=your_grafana_password

# Sentiment Analyzer
SENTIMENT_API_URL=http://sentiment-analyzer:8000
SENTIMENT_API_PORT=8000

# Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/STAGING/WEBHOOK
